%% -*- erlang -*-
%% Example egear config
%%

[
 {egear,
  [{device, "/dev/ttyACM0"},
   {screen, 0},
   %% map items to colors
   {map,
    [{"00004", color, {255,0,255}},
     {"7%H", color, {255,0,0}},   %% rotary dial, x
     {"6Zs", color, {0,255,0}},   %% rotary dial, y
     {"6YL", color, {0,0,255}},   %% rotary dial, z
     {"9&<", color, {255,0,0}},
     {"7W9", color, {0,0,255}}
    ]}
   ]}
].
